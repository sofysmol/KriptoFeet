@using KriptoFeet.Users.Models
@model KriptoFeet.Users.Models.UserSettings
@{
    ViewData["Title"] = "UserProfileSettings";
}

    <div class="row">
        <div class="col-md-12">    
            <div class="containerNew">
            <div class="row">
                <div class="col-xs-12 col-sm-3 " >
                    <figure >
                        <img class="profImag img-fluid img-circle"  src="~/images/UserPhoto.png"  alt="Photo" img align="middle" >
                        <figcaption class="ratings">
                            <div class="center-justified">
                                <button type="button" class="btn btn-primary btn-sm ">
                                    <span class="glyphicon glyphicon-open icon_color " style="vertical-align:middle" aria-hidden="true "></span> Загрузить новое <br> изображение
                                </button>
                            </div>
                        </figcaption>
                    </figure>  
                </div>
                <div class="col-xs-12 col-sm-4">
                    <br>
                    <form asp-controller="User" asp-action="UserProfileSettings" method="post" class="form-horizontal">
                    <div class="form-group">
                        <p>Имя </p>
                        <div class="col-sm-10">
                            <input value="@Model.FirstName" class="form-control" asp-for="FirstName" placeholder="Имя">
                            <span class="validation-error" asp-validation-for="FirstName" />
                        </div>
                    </div>
                    <div class="form-group">
                        <p>Фамилия</p>
                        <div class="col-sm-10">
                            <input value="@Model.LastName" class="form-control" asp-for="LastName" placeholder="Фамилия">
                            <span class="validation-error" asp-validation-for="LastName" />
                        </div>
                    </div>
                    <div class="form-group">
                        <p>Ник </p>
                        <div class="col-sm-10">
                            <input value="@Model.Nickname" class="form-control" asp-for="Nickname" placeholder="Ник">
                            <span class="validation-error" asp-validation-for="Nickname" />
                        </div>
                    </div>
                </div>

                <div class="col-xs-12 col-sm-4">
                    <br>
                    <div class="form-group">
                        <p>  Дата рождения </p>
                        <div class="col-sm-10">
                            <input type="date" value="@string.Format("{0:yyyy-MM-dd}", Model.Birthday)" class="form-control" asp-for="Birthday">
                            <span class="validation-error" asp-validation-for="Birthday" />
                        </div>
                    </div>
                    <br>
                    <br>
                    <div class="form-group">
                        <p>  Email</p>
                        <div class="col-sm-10">
                            <input value="@Model.Email" class="form-control" asp-for="Email" placeholder="Email">
                            <span class="validation-error" asp-validation-for="Email" />
                        </div>
                    </div>
                    <br>
                    <br>
                    <div class="but_top">
                        <button type="submit" class="btn btn-primary btn-md ">
                        Сохранить изменения
                        </button>
                    </div>
                    <span class="validation-error" asp-validation-summary="All"></span>
                    </form>
                </div>
                </div>
            </div>
        </div>
 
        <div class="col-md-8">
            <h4 class="header-with-line">Настройки аккаунта</h4>    
            <div class="container styleform" align="left">
            <div class="row">
                <div class="col-sm-6">
                    <br>
                    @Html.Partial("PasswordChangingForm", new PasswordChangingRequest())
                </div>
            </div>
        </div> 
    </div>

</div>




