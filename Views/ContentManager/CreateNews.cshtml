@model KriptoFeet.News.Models.CorrectNewsForm
@{
    ViewData["Title"] = "CreateNews";
}

    <div class="row">
        <div class="col-md-12" >    
            <div class="containerNewForCreateNews">
                    <br>
                        <form class="form-horizontal" asp-controller="ContentManager" asp-action="CreateNews" method="post" enctype="multipart/form-data">
                           @Html.AntiForgeryToken()
                            <div class="form-group"  >
                                <label asp-for="Title" class="control-label col-sm-3" >Заголовок новости</label>
                                <div class="col-sm-4">
                                    <input class="form-control" asp-for="Title"  placeholder="Заголовок новости">
                                    <span class="validation-error" asp-validation-for="Title" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-3 " >Новостная группа</label>
                                <div class="col-sm-4">
                                    <select asp-for="CategoryId" class="form-control input-lg"style="color:#888;">
                                        <option  style="display:none">Новостная группа</option>
                                        @foreach(var c in ViewBag.Categories)
                                        {
                                            <option value=@c.Id style="color:black">@c.Name</option>
                                        }
                                    </select>
                                    <span class="validation-error" asp-validation-for="CategoryId" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-3" >Изображение</label>
                                <div class="col-sm-4">
                                    <div class="but_top">
                                        <div class="fileUpload btn btn-primary btn-md">
                                                Обзор...
                                            <input type="file"  asp-for="Picture" type="file" class="upload" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                             <div class="form-group">
                                 <label asp-for="Body" class="control-label col-sm-3" >Текст новости:</label>
                                 <br><br>
                                 <div class="col-sm-8 col-md-offset-3" >
                                    <textarea asp-for="Body" id="message" class="form-control" rows="10"  required></textarea>
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <div class=" col-sm-8 col-md-offset-9">
                                    <button type="submit" class="btn btn-primary btn-md">Добавить новость</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div> 
            </div>
        
 
   