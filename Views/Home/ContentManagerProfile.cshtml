@model KriptoFeet.Users.Models.UserProfile
@{
    ViewData["Title"] = "ContentManagerProfile";
}

    <div class="row">
        <div class="col-md-12">       
            <div class=" containerNew">
                <div class="row">
                    <div class="col-xs-12 col-sm-3">
                        <figure>
                        <img class="profImag img-fluid img-circle"  src="~/images/UserPhoto.png"  alt="Photo" img align="middle" >                    
                        </figure>
                    </div>
                    <div class="col-xs-12 col-sm-9">
                       <div class="row">
                            <div class="col-xs-12 col-sm-6 ">
                                <div class = "user_content">
                                    <br>
                                    <h3><strong>@Model.Nickname</strong></h3>
                                    <br>
                                    <p>@Model.Email</p>
                                    <p>Контент-менеджер</p>
                                </div>
                            </div>
                            <div  class="col-xs-12 col-sm-6 ">
                                <br><br>
                                <div class="padding_but">
                                        <a asp-area="" asp-controller="Home" asp-action="UserProfileSettings" class="btn btn-primary btn-md">
                                            <span class="glyphicon glyphicon-cog icon_color " aria-hidden="true "></span> Настройки
                                        </a>
                                </div> 
                                <div class="pad_but_2">               
                                <button type="button"  class="btn btn-primary btn-md ">
                                    <span class="glyphicon glyphicon-remove-sign icon_color"  style="vertical-align:middle" aria-hidden="true "></span> Отказаться от роли <br>  контент- менеджера
                                </button>  
                                </div>                               
                            </div>
                            <div  class="col-xs-12 col-sm-12 " >
                                <hr >
                                <ul class ="inline_fot" >                           
                                    <li>
                                        <font size="3px">
                                            <p >Новостей:  <span class="badge badge_color">@Model.News.Count</span></p>
                                        </font>                            
                                    </li>
                                    <li>                     
                                        <font size="3px">
                                            <p >Комментариев:  <span class="badge badge_color">@Model.Comments.Count</span></p>
                                        </font>
                                    </li> 
                                    <li >                                               
                                        <div align ="right">
                                            <button type="button"  class="btn btn-primary btn-md  ">
                                                <span class="glyphicon glyphicon-pencil icon_color " aria-hidden="true "></span> Добавить новость
                                            </button>
                                        </div>
                                    </li>
                                </ul>
                                </hr>                            
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class=" col-md-12">
            <br>
            <br>
            <div class="tabs">
                <input id="tab1" type="radio" name="tabs" checked>
                <label for="tab1" title="Вкладка 1">Новости</label>
            
                <input id="tab2" type="radio" name="tabs">
                <label for="tab2" title="Вкладка 2">Комментарии</label>
            


            
                <section id="content-tab1">
                    <p>
                    <div class="col-md-12">
                        @foreach(var n in Model.News)
                        {
                        @Html.Partial("SmallNewsForManagerPage")
                        }
                    </div>
                    </p>
                </section>  
                <section id="content-tab2">
                    <p>
                        @foreach(var c in Model.Comments)
                        {
                            @Html.Partial("UserProfileComment", c)
                        }
                    </p>
                </section> 
   
            </div>
        </div> 

     
    </div>




