@model KriptoFeet.Users.Models.User
@{
    ViewBag.Title = "CreateUser";
}
<div class="row">
<div class="container col-md-4 col-md-offset-2">
<h2>Регистрация</h2>
<form action="/Home/CreateUser" method="post" class="form-horizontal"> 
    <div class="sing-up-form">
    <div class="form-group">
        <label class="control-label col-sm-4" asp-for="FirstName">Имя</label>
        <div class="col-sm-8">
            <input value="@Model.FirstName" class="form-control" asp-for="FirstName"/>
            <span class="validation-error" asp-validation-for="FirstName" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-4" asp-for="LastName">Фамилия</label>
        <div class="col-sm-8">
            <input value="@Model.LastName" class="form-control" asp-for="LastName"/>
            <span class="validation-error" asp-validation-for="LastName" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-4" asp-for="Birthday">День рождения</label>
        <div class="col-sm-8">
            <input type="date" value="@Model.Birthday" class="form-control" asp-for="Birthday"/>
            <span class="validation-error" asp-validation-for="Birthday" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-4" asp-for="Nickname">Ник</label>
        <div class="col-sm-8">
            <input value="@Model.Nickname" class="form-control" asp-for="Nickname"/>
            <span class="validation-error" asp-validation-summary="All" asp-validation-for="Nickname" />
       </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-4" asp-for="Email">Email</label>
        <div class="col-sm-8">
            <input value="@Model.Email" class="form-control" asp-for="Email"/>
            <span class="validation-error" asp-validation-summary="All" asp-validation-for="Email" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-4" asp-for="Password">Пароль</label>
        <div class="col-sm-8">
            <input type="password" value="" class="form-control" asp-for="Password"/>
            <span class="validation-error" asp-validation-for="Password" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-4" asp-for="PasswordAgain">Повторите пароль</label>
        <div class="col-sm-8">
            <input type="password"  value="" class="form-control" asp-for="PasswordAgain"/>
            <span class="validation-error" asp-validation-for="PasswordAgain" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-1 col-sm-1">
            <input type="checkbox" asp-for="Agreement"/>
            <span class="validation-error" asp-validation-for="Agreement" />
        </div>
        <label align="left" class="agreement-label col-sm-10" asp-for="Agreement">Я даю согласие на использование персональных данных.
             Данным согласием я разрешаю сбор моих персональных данных, их хранение,
              систематизацию, обновление, использование (в т.ч. передачу третьим лицам для обмена информацией),
               а также осуществление любых иных действий, предусмотренных действующим законом Российской Федерации.</label>
    </div>
    <span class="validation-error">@Html.ValidationSummary()</span>
    <div class="form-group"> 
    <div class="col-sm-offset-4 col-sm-8">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary">Отправить</a>
      <button type="submit" class="btn btn-primary">Отправить</button>
    </div>
  </div>
    </div>
</form>
</div>
</div>



